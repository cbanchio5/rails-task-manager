<h1>Tasks</h1>

<% @tasks.each do |task| %>

<li><%= link_to task.title, task_path(task) %></li><%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: 'btn btn-danger' %>

<% end %>

<%= link_to 'Add a task', tasks_new_path, class: 'btn btn-primary' %>
